<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:theme="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/tableRow_01"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="현재 비밀번호 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:id="@+id/editText2"
            android:maxLength="4"
            android:background="@android:color/background_light"
            android:hint=""
            android:layout_height="30dp" />

    </TableRow>

    <TableRow
        android:layout_below="@+id/tableRow_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow_02">

        <TextView
            android:text="새 비밀번호    : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/editText3"
            android:maxLength="4"
            android:background="@android:color/background_light"
            android:hint=""
            android:layout_height="30dp" />

    </TableRow>

    <TableRow
        android:layout_below="@+id/tableRow_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableRow_03" >

        <TextView
            android:text="새 비밀번호 확인 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/background_dark"
            android:textSize="21sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/editText4"
            android:maxLength="4"
            android:background="@android:color/background_light"
            android:hint=""
            android:layout_height="30dp"/>

    </TableRow>



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow_04"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/tableRow_03"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp">

        <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight= "15dp"
            android:layout_weight="1"
            android:id="@+id/Master_Key_Cancel_Button"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />

        <Button
            android:text="설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight= "15dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/Master_Key_OK_Button"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/background_light" />
    </TableRow>

    <TextView
        android:text="비밀번호는 4자리입니다."
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow_03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView3"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="현재 비밀번호가 틀렸거나 새 비밀번호가 일치하지 않습니다."
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        android:id="@+id/textView5" />

</RelativeLayout>